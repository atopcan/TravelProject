@using TravelProject.Models.Sınıflar
@model List<Blog>
<div class="con-bot">
    @foreach (var item in Model)
    {
        <div class="left">
            <div class="bot-left">
                <img src="@item.blogImage" alt="" style="width:300px; height:150px;"/>
            </div>
            <div class="left-text">
                <h4>@item.baslik</h4>
                <span class="doller">@item.tarih.ToString("dd.MM.yyyy")</span>
                <p>@item.aciklama.Substring(0,50)</p>
                <p><a href="/Blog/BlogDetay/@item.Id"><span class="read">Devamını Oku >></span></a></p>
            </div>
        </div>
    }
    @Html.Action("Partial1","Default")

    <div class="clear"></div>
</div>

